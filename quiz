    <script>
        let currentQuestion = 0;
        const totalQuestions = 4;

        function startQuiz() {
            const teamCode = document.getElementById('team-code').value;
            if (teamCode.trim() === "") {
                alert("Please enter a valid team code.");
                return;
            }
            document.getElementById('team-code-page').style.display = 'none';
            document.getElementById('quiz-page').style.display = 'block';
            updateQuestionVisibility();
        }

        function nextQuestion() {
            if (currentQuestion < totalQuestions - 1) {
                currentQuestion++;
                updateQuestionVisibility();
            }
        }

        function previousQuestion() {
            if (currentQuestion > 0) {
                currentQuestion--;
                updateQuestionVisibility();
            }
        }

        function updateQuestionVisibility() {
            const allQuestions = [
                document.getElementById('question-container'),
                ...document.querySelectorAll('.question-block')
            ];

            allQuestions.forEach((block, index) => {
                block.style.display = index === currentQuestion ? 'block' : 'none';
            });

            document.getElementById('submit-container').style.display = 
                currentQuestion === totalQuestions - 1 ? 'block' : 'none';

            document.querySelector('.back-btn').style.display = currentQuestion === 0 ? 'none' : 'inline-block';
            document.querySelector('.next-btn').style.display = currentQuestion === totalQuestions - 1 ? 'none' : 'inline-block';
        }

        function confirmSubmission() {
            const confirmation = confirm("Are you sure you want to submit? This cannot be modified.");
            if (confirmation) {
                alert("Your answers have been submitted.");
                document.getElementById('quiz-page').innerHTML = '<h2 style="color: #4CAF50; text-align: center;">Thank you for participating!</h2>';
            }
        }

        updateQuestionVisibility();
        
        function confirmSubmission() {
    const confirmation = confirm("Are you sure you want to submit? This cannot be modified.");
    if (confirmation) {
        // Collect all selected answers
        const answers = {
            leastEffective1: document.querySelector('input[name="least-effective"]:checked')?.value || null,
            mostEffective1: document.querySelector('input[name="most-effective"]:checked')?.value || null,
            leastEffective2: document.querySelector('input[name="least-effective-2"]:checked')?.value || null,
            mostEffective2: document.querySelector('input[name="most-effective-2"]:checked')?.value || null,
            leastEffective3: document.querySelector('input[name="least-effective-3"]:checked')?.value || null,
            mostEffective3: document.querySelector('input[name="most-effective-3"]:checked')?.value || null,
            leastEffective4: document.querySelector('input[name="least-effective-4"]:checked')?.value || null,
            mostEffective4: document.querySelector('input[name="most-effective-4"]:checked')?.value || null,
        };

        // Send data to the backend
        fetch('https://your-backend-url/submit-quiz', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(answers),
        })
        .then(response => response.json())
        .then(data => {
            alert(data.message);
            document.getElementById('quiz-page').innerHTML = '<h2 style="color: #4CAF50; text-align: center;">Thank you for participating!</h2>';
        })
        .catch(error => {
            console.error('Error submitting quiz:', error);
            alert('There was an error submitting your answers. Please try again later.');
        });
    }
}

    </script>
